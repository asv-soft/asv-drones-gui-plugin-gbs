<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:gbs="clr-namespace:Asv.Drones.Gui.Plugin.Gbs"
             xmlns:api="clr-namespace:Asv.Drones.Gui.Api;assembly=Asv.Drones.Gui.Api"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="30"
             x:Class="Asv.Drones.Gui.Plugin.Gbs.LinkQualityGbsRttView"
             x:CompileBindings="True"
             x:DataType="gbs:LinkQualityGbsRttViewModel">
    <Design.DataContext>
        <gbs:LinkQualityGbsRttViewModel/>
    </Design.DataContext>
    <StackPanel Orientation="Horizontal" Spacing="5" ToolTip.Tip="{x:Static gbs:RS.LinkQualityGbsRttView_ToolTip}">
        <api:ConnectionQuality Width="20" Height="20" MaxValue="1" WarningValue="0.5" CriticalValue="0.2" Value="{CompiledBinding LinkQuality}"/>
        <TextBlock VerticalAlignment="Center" Text="{CompiledBinding LinkQualityString}"/>
    </StackPanel>
</UserControl>
